    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Test current file",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "--colors",
                "--require",
                "babel-core/register",
                "--require",
                "babel-polyfill",
                "${file}"
            ],
            "env": {
                "NODE_ENV": "test"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach",
            "port": 9229,
            "restart": true
        }
    ]
}