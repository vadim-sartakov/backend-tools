    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/nodemon",
            "args": ["${workspaceRoot}/server.js"],
            "restart": true,
            "runtimeArgs": [
              "--nolazy",
              "--require",
              "babel-register"
            ],
            "sourceMaps": true
        },
    ]
}