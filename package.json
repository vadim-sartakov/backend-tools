{
  "name": "backend-tools",
  "version": "0.0.1",
  "description": "Set of useful tools for building backend applications",
  "main": "lib/index.js",
  "scripts": {
    "unit-test": "mocha src/**/*unit.test.js --watch --require babel-core/register --require babel-polyfill",
    "int-test": "mocha src/**/*int.test.js --watch --require dotenv/config --require babel-core/register --require babel-polyfill --timeout 10000",
    "eslint": "eslint --ignore-path .gitignore ./",
    "clean": "rimraf lib/",
    "compile": "babel src/ --ignore **/*.test.js --out-dir lib/ --copy-files --source-maps",
    "build": "npm-run-all clean compile"
  },
  "keywords": [],
  "author": "Vadim Sartakov",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "cookie-parser": "^1.4.3",
    "debug": "^3.2.6",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "flat": "^4.1.0",
    "helmet": "^3.15.0",
    "http-link-header": "^0.8.0",
    "shared-tools": "git+https://github.com/vadim-sartakov/shared-tools.git#0.0.1",
    "validate.js": "^0.12.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "mocha": "^5.2.0",
    "mongoose": "^5.3.14",
    "npm-run-all": "^4.1.5",
    "qs": "^6.6.0",
    "rimraf": "^2.6.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.3.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
