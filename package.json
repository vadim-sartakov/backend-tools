{
  "name": "backend-tools",
  "version": "0.0.1",
  "description": "Set of useful tools for building backend applications",
  "main": "lib/index.js",
  "scripts": {
    "unit-test": "mocha src/**/*unit.test.js --inspect --require babel-core/register --require babel-polyfill",
    "int-test": "createdbjs sequelize & mocha src/**/*int.test.js --inspect --require babel-core/register --require babel-polyfill --timeout 10000",
    "test": "npm run unit-test && npm run int-test",
    "coverage": "nyc --reporter=lcov --reporter=text npm test",
    "clean": "rimraf lib/",
    "compile": "babel src/ --ignore **/*.test.js --out-dir lib/ --copy-files --source-maps",
    "build": "npm-run-all clean compile"
  },
  "keywords": [],
  "author": "Vadim Sartakov",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "common-tools": "git+https://github.com/vadim-sartakov/common-tools.git#master",
    "cookie-parser": "^1.4.3",
    "debug": "^3.2.6",
    "express": "^4.16.4",
    "helmet": "^3.16.0",
    "http-link-header": "^0.8.0",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "mocha": "^5.2.0",
    "mongoose": "^5.5.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.0.0",
    "pg": "^7.10.0",
    "pg-hstore": "^2.3.2",
    "pgtools": "^0.3.0",
    "qs": "^6.7.0",
    "rimraf": "^2.6.3",
    "sequelize": "^4.43.2",
    "sinon": "^6.3.5",
    "sinon-chai": "^3.3.0",
    "supertest": "^3.3.0"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-object-rest-spread"
    ]
  }
}
